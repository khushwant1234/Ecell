// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Stores final, completed submissions
model Submission {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  answers   Json     // Storing all answers as a flexible JSON object
}

// Stores in-progress applications for the "Remind Me" feature
model Progress {
  id        Int      @id @default(autoincrement())
  email     String   @unique // We'll find users by their email
  formData  Json
  updatedAt DateTime @updatedAt
}